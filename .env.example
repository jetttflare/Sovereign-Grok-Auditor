# GrokApp Environment Configuration Template
# ==========================================
# Copy this file to .env and fill in your values

# ===================
# API Keys (REQUIRED)
# ===================
GEMINI_API_KEY=${GEMINI_API_KEY}
GROK_API_KEY=${GROK_API_KEY}
OPENROUTER_API_KEY=${OPENROUTER_API_KEY}

# ===================
# Application Config
# ===================
GROKAPP_ENV=development
GROKAPP_PORT=8080
GROKAPP_LOG_LEVEL=INFO
GROKAPP_DEBUG=false

# ===================
# Database
# ===================
DATABASE_URL=postgresql://grokapp:password@localhost:5432/grokapp
REDIS_URL=redis://localhost:6379

# ===================
# Monitoring (Optional)
# ===================
PROMETHEUS_MULTIPROC_DIR=/tmp/prometheus
GRAFANA_PASSWORD=changeme

# ===================
# Alerting (Optional)
# ===================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
PAGERDUTY_SERVICE_KEY=your-pagerduty-key
SMTP_USERNAME=alerts@grokapp.io
SMTP_PASSWORD=your-smtp-password

# ===================
# Security
# ===================
SECRET_KEY=your-secret-key-here
JWT_SECRET=your-jwt-secret-here
API_KEY_SALT=your-salt-here

# ===================
# External Services
# ===================
AZURE_VM_IP=your-azure-vm-ip
AZURE_SSH_KEY_PATH=~/.ssh/azure_key
